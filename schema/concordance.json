[
  { "@type" : "Class",
    "@id" : "Book",
    "title" : "xsd:string",
    "chapters" : { "@type" : "Set",
                   "@class" : "Chapter" }},

  { "@type" : "Class",
    "@id" : "Chapter",
    "@key" : { "@type" : "Lexical",
               "@fields" : ["number"]},
    "number" : "xsd:integer",
    "paragraphs" : { "@type" : "Array",
                     "@class" : "Paragraph"}},

  { "@type" : "Class",
    "@id" : "Paragraph",
    "@key" : { "@type" : "Random" },
    "text" : "xsd:string",
    "terms" : { "@type" : "Set",
                "@class" : "TermDF"}},

  { "@type" : "Class",
    "@id" : "Term",
    "@key" : { "@type" : "Lexical",
               "@fields" : ["term"]},
    "term" : "xsd:string",
    "tf" : "xsd:integer" },

  { "@type" : "Class",
    "@id" : "TermDF",
    "@subdocument" : [],
    "@key" : { "@type" : "Lexical",
               "@fields" : ["term"]},
    "term" : "Term",
    "df" : "xsd:integer" }
]

